<p id="notice"><%= notice %></p>

<p>
  <b>Text:</b>
  <%= @post.text %>
</p>

<p>
  <% if !@post.tag_list.blank? %>
    <p>Tags: <%= raw @post.tag_list.map { |tag| link_to tag, tag_path(tag) }.join(', ') %></p>
  <% end %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
